<h1>Sign up</h1>

<form action="/insert_intern" method="post">

  <div>
    <label for="email_box">Student Email</label>
    <input id="email_box" name="query_email" type="text">
  </div>
                 
  <div>
    <label for="firstname_box">First Name</label>
      
    <input type="text" id="firstname_box" name="query_firstname">
  </div>
         
  <div>
    <label for="lastname_box">Last Name</label>
      
    <input type="text" id="lastname_box" name="query_lastname">
  </div>
         
  <div>
    <label for="year_box">Year</label>
      
    <input type="text" id="year_box" name="query_year">
  </div>
         
  <div>
    <label for="major_box">Major</label>
      
    <input type="text" id="major_box" name="query_major">
  </div>
         
  <div>
    <label for="university_box">University</label>
      
    <input type="text" id="university_box" name="query_university">
  </div>
    
  <div>
    <label for="password_box">Password</label>
    <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
  </div>

  <div>
    <label for="password_confirmation_box">Password Confirmation</label>
    <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
  </div>

  <button>
    Sign up
  </button>
</form>

<hr>

<p>
  Already have an account?, <a href="/intern_sign_in">Sign in here!</a>
</p>
